<?xml version="1.0"?>
<config>
   <tabs>
	<dg translate="label" module="pricerulesextended">
	<label>Drew Gillson</label>
	<sort_order>195</sort_order>
	</dg>
   </tabs>
   <sections>
        <pricerulesextended translate="label" module="pricerulesextended">
            <label>Price Rules Extended Module</label>
            <tab>dg</tab>
            <frontend_type>text</frontend_type>
            <sort_order>701</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
            	<promocode translate="label">
                    <label>Promo Code Generation</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <dollarvalue translate="label">
                        	<label>Promo code dollar value</label>
                        	<note>This modules will use your default currency</note>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </dollarvalue>
                        <minpurchase translate="label">
                            <label>Minimum purchase amount for generated promo code to be valid</label>
                            <note></note>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </minpurchase>
                        <emailtext translate="label">
                            <label>Text of notification email to send on success</label>
                            <note>You can use {promo_code}, {promo_value}, and {promo_min} variables in your text.</note>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </emailtext>
                    </fields>
                </promocode>
                <email translate="label">
                    <label>Email sending settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable email sending</label>
                            <note>Disable if Noveo module present</note>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                    </fields>
                </email>
            </groups>
		</pricerulesextended>
	</sections>
</config>
