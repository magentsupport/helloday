<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Multidots_BoxProducts>
            <version>1.0.0</version>
        </Multidots_BoxProducts>
    </modules>
    <global>
        <blocks>
            <boxproducts>
                <class>Multidots_BoxProducts_Block</class>
            </boxproducts>
        </blocks>
        <helpers>
            <boxproducts>
                <class>Multidots_BoxProducts_Helper</class>
            </boxproducts>
        </helpers>
        <models>
            <boxproducts>
                <class>Multidots_BoxProducts_Model</class>
            </boxproducts>
        </models>
        <resources>
            <customcatattrb_setup>
                <setup>
                    <module>Multidots_BoxProducts</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </customcatattrb_setup>
        </resources>
        <events>
            <!--<catalog_product_load_after>
                <observers>
                    <catalog_product_load_after>
                        <type>model</type>
                        <class>boxproducts/observer</class>
                        <method>checkoutCartProductAddAfter</method>
                    </catalog_product_load_after>
                </observers>
            </catalog_product_load_after>-->
            <sales_convert_quote_item_to_order_item>
                <observers>
                    <customoptions>
                        <type>model</type>
                        <class>boxproducts/observer</class>
                        <method>salesConvertQuoteItemToOrderItem</method>
                    </customoptions>
                </observers>
            </sales_convert_quote_item_to_order_item>
        </events>
    </global>
    <frontend>
        <routers>
            <boxproducts>
                <use>standard</use>
                <args>
                    <module>Multidots_BoxProducts</module>
                    <frontName>boxproducts</frontName>
                </args>
            </boxproducts>
            <newsletter>
                <args>
                    <modules>
                        <Multidots_BoxProducts before="Mage_Newsletter_SubscriberController">Multidots_BoxProducts</Multidots_BoxProducts>
                    </modules>
                </args>
            </newsletter>
            <checkout>
                <args>
                    <modules>
                        <Multidots_BoxProducts before="Mage_Checkout">Multidots_BoxProducts</Multidots_BoxProducts>
                    </modules>
                </args>
            </checkout>
        </routers>
        <layout>
            <updates>
                <boxproducts>
                    <file>boxproducts.xml</file>
                </boxproducts>
            </updates>
        </layout>
    </frontend>
</config>